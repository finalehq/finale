{
  "name": "finale",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "platforms/*",
    "shared/*"
  ],
  "scripts": {
    "app:dev": "npm run dev --workspace=@finale/application",
    "app:build": "npm run build --workspace=@finale/application",
    "app:preview": "npm run preview --workspace=@finale/application",
    "app:lint": "npm run lint --workspace=@finale/application",
    "doc:dev": "npm run dev --workspace=@finale/documentation",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
